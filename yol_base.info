name        = yol base
description = yol base theme
screenshot  = screenshot.png
core        = 7.x

; Base - Radix
base theme  = radix
;hidden = true

; Regions
regions[content] = Content

; Breakpoints
breakpoints[xs] = (max-width: 767px)
breakpoints[sm] = (min-width: 768px) and (max-width: 991px)
breakpoints[md] = (min-width: 992px) and (max-width: 1199px)
breakpoints[lg] = (min-width: 1200px)

; Panels
plugins[panels][layouts] = panels/layouts
plugins[panels][styles] = panels/styles

; CSS - General
stylesheets[all][]     = assets/css/yol_base.style.css

; Javascript
;scripts[] = assets/js/{{machine_name}}.script.js
scripts[] = assets/js/radix.script.js

; Maximum depth for dropdown menus (1 = no dropdowns, 2 = single dropdown,
; 3 or greater = nested dropdown menus).
settings[main_menu_max_depth] = 2

version = "7.x-1.0"
